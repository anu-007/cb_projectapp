<div class="personal_contents">
    <div class="col-xs-6 col-sm-6 col-md-4  col-lg-3 col-md-offset-3 col-lg-offset-4">
        <img class="user_image" src={{usr.avatar}}>
    </div>
    <div class="col-xs-6 col-sm-6  col-md-4 col-lg-3">
        <div class="user_name">
            <p style="font-size: 2.5em; text-align: center;">{{usr.name}}</p>
        </div>
    </div>
</div>
<div class="upload_avatar col-xs-offset-1 col-sm-offset-1 col-md-offset-5 col-lg-offset-5">
    <p>
        upload you avatar
    </p>
    <div class="wrapper ">
        <form method="post" enctype="multipart/form-data" action="/users/profile" onsubmit="window.location.reload(true)">
            <div class="file-upload">
                <input type="file" class="form-control" onchange="this.form.submit()"  name="avatar"/>
                <i class="fa fa-arrow-up"></i>
            </div>
        </form>
    </div>
</div>
